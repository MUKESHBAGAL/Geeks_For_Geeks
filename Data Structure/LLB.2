class Solution {
  public:
    /* Should return data of middle node. If linked list is empty, then -1 */
     int getMiddle(Node* head) {
        if (head == NULL) return -1; // Empty list
        
        Node *slow = head;
        Node *fast = head;
        
        // Traverse the list with two pointers
        while (fast != NULL && fast->next != NULL) {
            slow = slow->next;
            fast = fast->next->next;
        }
        
        return slow->data;
    }
};
