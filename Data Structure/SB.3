###IN C++

class Solution {
  public:
    string removeConsecutiveCharacter(string& s) {
        string ans="";
        int n = s.size();
        
        for (int i = 0; i < n; i++) {
            if (i < n - 1 && s[i] == s[i + 1]) {
                continue;
            }
            ans+=s[i];
        }
        
        return ans;
    }
};



