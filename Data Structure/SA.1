IN C 

char* reverseWord(char* s) {
    if (s == '\o') 
        return s;

    int len = strlen(s);
    int start = 0;
    int end = len - 1;

    while (start < end) {
        char temp = s[start];
        s[start] = s[end];
        s[end] = temp;
        start++;
        end--;
    }

    return s;
}

