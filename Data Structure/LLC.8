class Solution {
public:
    Node* mergeResult(Node* node1, Node* node2) {
        vector<int> arr;

        Node* temp1 = node1;
        while (temp1) {
            arr.push_back(temp1->data);
            temp1 = temp1->next;
        }

        Node* temp2 = node2;
        while (temp2) {
            arr.push_back(temp2->data);
            temp2 = temp2->next;
        }

        sort(arr.begin(), arr.end());

        Node* head = nullptr;
        Node* tail = nullptr;
        int n=arr.size()-1;
        for (int i=n;i>=0;i--) {
            Node* newNode = new Node(arr[i]);
            if (!head) {
                head = newNode;
                tail = newNode;
            } else {
                tail->next = newNode;
                tail = newNode;
            }
        }

        return head;
    }
};
