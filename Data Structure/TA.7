###IN C++

class Solution {
  public:
    int getSize(Node* root) {
        if (root == NULL) {
            return 0;
        }
        return 1 + getSize(root->left) + getSize(root->right);
        
    }
};

###IN JAVA

class Solution {
    public static int getSize(Node root) {
        if (root == null) {
            return 0;
        }
        return 1 + getSize(root.left) + getSize(root.right);
        
    }
}
