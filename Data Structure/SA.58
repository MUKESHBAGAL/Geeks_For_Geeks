### IN C++

class Solution {
  public:
    string conRevstr(string S1, string S2) {
        string combined = S1 + S2;
        reverse(combined.begin(), combined.end());
        return combined;
        
    }
};


### IN JAVA

class Solution {
    public String conRevstr(String s1, String s2) {
        return new StringBuilder(s1 + s2).reverse().toString();
    }
} 


### IN PYTHON

class Solution:
    def conRevstr(self, S1, S2):
        s = S1 + S2 
        return s[::-1] 






