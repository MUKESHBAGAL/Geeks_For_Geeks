class Solution {
public:
    Node* mergeKLists(vector<Node*>& arr) {
        vector<int> ans;
        for (int i = 0; i < arr.size(); i++) {
            Node* temp = arr[i];
            while (temp) {
                ans.push_back(temp->data);
                temp = temp->next;
            }
        }
        sort(ans.begin(), ans.end());
        
        Node* head = nullptr;
        Node* tail = nullptr;
        for (int i = 0; i < ans.size(); i++) {
            Node* newNode = new Node(ans[i]);
            if (!head) {
                head = newNode;
                tail = newNode;
            } else {
                tail->next = newNode;
                tail = tail->next;
            }
        }
        return head;
    }
};
