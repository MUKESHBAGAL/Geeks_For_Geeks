###C++

class Solution {
  public:
    bool PalinArray(vector<int> &arr) {
        for(int i=0;i<arr.size();i++){
           int x,rev=0,rem;
           x=arr[i];
           while(x>0){
               rem=x%10;
               rev=rem+rev*10;
               x/=10;
           }
           if(rev==arr[i])
                continue;
            else
            return false;
       }
       return true;
    }
};

###JAVA

class Solution {
    public static boolean palinArray(int[] arr) {
            for (int i = 0; i < arr.length; i++) {
            int x = arr[i];
            int rev = 0;
            int original = x;
    
            while (x > 0) {
                int rem = x % 10;
                rev = rev * 10 + rem;
                x /= 10;
            }
    
            if (rev != original) {
                return false;
            }
        }
        return true;
    }
}

