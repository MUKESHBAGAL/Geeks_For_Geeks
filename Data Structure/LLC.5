class Solution {
public:
    bool isPalindrome(Node *head) {
        vector<int> value;
        Node *temp = head;

        while (temp != nullptr) {
            value.push_back(temp->data);
            temp = temp->next;
        }

        int n = value.size();
        for (int i = 0; i < n / 2; ++i) {
            if (value[i] != value[n - 1 - i])
                return false;
        }
        return true;
    }
};
