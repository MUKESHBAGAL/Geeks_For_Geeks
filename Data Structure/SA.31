### IN C++


class Solution{
    public:
    int remainderWith7(string n)
    {
        int remainder = 0;
        for (char digit : n)
        {
            remainder = (remainder * 10 + (digit - '0')) % 7;
        }
        return remainder;
    }
};


### IN JAVA

class Solution
{
    // Complete the function
    int remainderWith7(String num)
    {
        int remainder = 0;
        for (char digit : num.toCharArray()) {
            remainder = (remainder * 10 + (digit - '0')) % 7;
        }
        return remainder;
    }
}


### IN PYTHON

class Solution:
    #your task is to complete this function
    #Function should return the required answer
    #You are not allowed to convert string to integer
    def remainderWith7(self, num):
        remainder = 0
        for digit in num:
            remainder = (remainder * 10 + int(digit)) % 7
        return remainder





