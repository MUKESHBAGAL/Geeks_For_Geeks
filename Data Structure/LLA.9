###IN C

int searchLinkedList(struct Node *head, int x) {
    struct Node *temp=head;
    while (temp) {
        if (temp->data == x)
            return 1;
        temp = temp->next; 
    }
    return 0;
}


###IN C++

bool searchLinkedList(Node *head, int x) {
    Node *temp = head;
    while (temp) {
        if (temp->data == x)
            return true;
        temp = temp->next; 
    }
    return false; 
}


