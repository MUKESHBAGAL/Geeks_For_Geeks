###C++
class Solution {
public:
    int search(int k, vector<int>& arr) {
        for (int i = 0; i < arr.size(); i++) {
            if (arr[i] == k) {
                return i + 1;
            }
        }
        return -1;
    }
};


###JAVA
class Solution {
    public int search(int k, ArrayList<Integer> arr) {
        // Iterate over the ArrayList to find the index of k
        for (int i = 0; i < arr.size(); i++) {
            if (arr.get(i) == k) {
                return i+1; // Return the index if the element is found
            }
        }
        return -1; // Return -1 if the element is not found
    }
}

