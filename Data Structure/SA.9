### IN C++

class Solution{
public:	
		
	string removeVowels(string S) 
	{
	    unordered_set<char> vowels = {'a', 'e', 'i', 'o', 'u', 'A', 'E', 'I', 'O', 'U'};
        string result = "";
        for (char c : S) {
            if (vowels.find(c) == vowels.end()) {  // If character is not a vowel
                result += c;
            }
        }
        return result;
	}
};


### IN JAVA

class Solution {
    String removeVowels(String S) {
        Set<Character> vowels = new HashSet<>();
        vowels.add('a'); vowels.add('e'); vowels.add('i'); vowels.add('o'); vowels.add('u');
        vowels.add('A'); vowels.add('E'); vowels.add('I'); vowels.add('O'); vowels.add('U');

        StringBuilder result = new StringBuilder();
        for (char c : S.toCharArray()) {
            if (!vowels.contains(c)) {  // If character is not a vowel
                result.append(c);
            }
        }
        return result.toString();
    }
}


### IN PYTHON

class Solution:
    def removeVowels(self, S):
        vowels = set("aeiouAEIOU")  # Set for faster lookup
        word = ""  # Initialize the result string
        for char in S:
            if char not in vowels:
                word += char  # Append non-vowel characters
        return word

