###IN C

void reverseCol(int n, int m, int matrix[][m]) {
    for (int i = 0; i < n; i++) {
        for (int j = 0; j < m / 2; j++) {
            int temp = matrix[i][j];
            matrix[i][j] = matrix[i][m - j - 1];
            matrix[i][m - j - 1] = temp;
        }
    }
}



###IN C++

class Solution {
public:
    void reverseCol(vector<vector<int> > &matrix) {
        int n = matrix.size();
        int m = matrix[0].size();
        for (int i = 0; i < n; i++) { 
            for (int j = 0; j < m / 2; j++) { 
                swap(matrix[i][j], matrix[i][m - j - 1]);
            }
        }
    }
};




