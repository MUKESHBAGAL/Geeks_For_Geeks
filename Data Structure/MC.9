###IN C++

class Solution {
  public:
    int countOccurrences(vector<vector<int>> &mat, int x) {
        int count=0;
        for(int i=0;i<mat.size();i++){
            for(int j=0;j<mat[0].size();j++){
                if(mat[i][j]==x)
                    count++;
            }
        }
        return count;
        
    }
};




###IN JAVA

class Solution {
    public int countOccurrences(int[][] mat, int x) {
        int count = 0;
        for (int i = 0; i < mat.length; i++) {
            for (int j = 0; j < mat[0].length; j++) {
                if (mat[i][j] == x) {
                    count++;
                }
            }
        }
        return count;
    }
}



