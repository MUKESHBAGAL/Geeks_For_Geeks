### IN C++


string ReverseSort(string str){
    sort(str.begin(),str.end());
    reverse(str.begin(),str.end());
    return str;
}


### IN JAVA

class Solution 
{ 
    String ReverseSort(String str) 
    { 
        List<Character> charList = new ArrayList<>();
        for (char c : str.toCharArray()) charList.add(c);
        charList.sort(Collections.reverseOrder());
        StringBuilder result = new StringBuilder(charList.size());
        for (char c : charList) result.append(c);
        return result.toString();
    }
}



### IN PYTHON

class Solution:
    def ReverseSort(self, str): 
        return ''.join(sorted(str, reverse=True))





